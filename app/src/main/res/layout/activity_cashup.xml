<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:orientation="vertical"
    tools:context=".AccountsMenuItems.cashup">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cashup"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"/>

    <LinearLayout
        android:id="@+id/select_date_linear_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/date_txtvw"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="DD/MM/YYYY"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/calender_icon_imgvw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_calendar" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total collections USD:"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Total cash consignment:"
            android:textSize="10sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/total_collection_txtvw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            android:hint="Total"
            android:height="35dp"/>


        <EditText
            android:id="@+id/cashcon_todisbure_edtxt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-1dp"
            android:height="35dp"

            android:inputType="numberDecimal"
            android:textSize="20sp" />


    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Income"
        android:textSize="10sp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:textSize="17sp"
        android:text="Incomes (Other)"
        android:height="35dp"/>
        <EditText
            android:id="@+id/incomes_other_edttxt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:height="35dp"
            android:inputType="numberDecimal"
            android:textSize="17sp" />
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expenses"
        android:textSize="10sp"
       />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/transport_expense_txtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textSize="17sp"
            android:text="Transport"
            android:height="35dp"/>

        <EditText
            android:id="@+id/transport_expns_edittxt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:height="35dp"
            android:inputType="numberDecimal"
            android:textSize="17sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lunch_expense_txtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textSize="17sp"
            android:text="Lunch"
            android:height="35dp"/>

        <EditText
            android:id="@+id/lunch_expns_edittxt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:height="35dp"
            android:inputType="numberDecimal"
            android:textSize="17sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/airtime_expense_txtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textSize="17sp"
            android:text="Airtime"
            android:height="35dp"/>

        <EditText
            android:id="@+id/airtime_expns_edittxt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:height="35dp"
            android:inputType="numberDecimal"
            android:textSize="17sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/disburse_expense_txtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textSize="17sp"
            android:text="Disbursements"
            android:height="35dp"/>

        <EditText
            android:id="@+id/disbursement_expns_edttxt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:height="35dp"
            android:inputType="numberDecimal"
            android:textSize="17sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/other_expense_txtVw"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textSize="17sp"
            android:height="35dp"
            android:text="Other"/>

        <EditText
            android:id="@+id/other_expns_edttxt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="3dp"
            android:height="35dp"
            android:inputType="numberDecimal"
            android:textSize="17sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cash in hand"
        android:textSize="10sp" />



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cash_in_hand_txtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textSize="17sp"
            android:text="Cash in hand"
            android:height="35dp"/>

        <EditText
            android:id="@+id/cashin_hand_expns_edtxt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:height="35dp"
            android:inputType="numberDecimal"
            android:textSize="17sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/gradient2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:text="Shortfall"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textColor="#070707"
            android:height="40dp"/>
        <TextView
            android:id="@+id/balance_expense_txtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:height="40dp"
            android:textColor="#070707"
            android:layout_alignParentEnd="true"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp">

        <Button
            android:id="@+id/calculate_btn"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Calculate"

            android:layout_gravity="center"/>

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="submit"
            android:layout_gravity="center"/>


    </RelativeLayout>




</LinearLayout>
</ScrollView>