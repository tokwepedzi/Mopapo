<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient2"
    tools:context=".DeviceConfig.Register">


    <TextView
        android:id="@+id/mopapoTaskbartxtvw"
        android:layout_width="410dp"
        android:layout_height="40dp"
        android:background="@color/cardview_dark_background"
        android:text="mopapo"
        android:textAlignment="center"
        android:textColor="#FFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/poweredBytxtvw"
        android:layout_width="165dp"
        android:layout_height="18dp"
        android:layout_marginTop="4dp"
        android:text="powered by Transact Africa"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mopapoTaskbartxtvw" />

    <TextView
        android:id="@+id/create_new_acc_TxtVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Create  new account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poweredBytxtvw" />

    <EditText
        android:id="@+id/full_name_EdtTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:foregroundTint="#FFFFFF"
        android:textCursorDrawable="@null"
        android:hint="Full Name"
        android:cursorVisible="true"
        android:outlineSpotShadowColor="#851313"
        android:padding="10dp"
        android:shadowColor="#FFFFFF"
        android:textColorHint="#776E6E"
        app:layout_constraintEnd_toStartOf="@+id/loginRightGdLn"
        app:layout_constraintHorizontal_bias="0.408"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_new_acc_TxtVw" />

    <EditText
        android:id="@+id/email_edit_Txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:backgroundTint="#050505"
        android:hint="Email"
        android:padding="10dp"
        android:textColorHint="#776E6E"
        app:layout_constraintEnd_toStartOf="@+id/loginRightGdLn"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/full_name_EdtTxt" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pass_layout_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#050505"
        app:passwordToggleEnabled="true"
        android:textCursorDrawable="@null"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_edit_Txt">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_edtdtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#050505"
            android:cursorVisible="true"
            android:hint="Password"
            android:inputType="textPassword"
            android:outlineAmbientShadowColor="#FFFFFF"
            android:outlineSpotShadowColor="#FFFFFF"
            android:shadowColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textCursorDrawable="@android:color/white" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passconf_layout_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:backgroundTint="#050505"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass_layout_txt">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordconf_edtdtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#050505"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:outlineAmbientShadowColor="#FFFFFF"
            android:textCursorDrawable="@android:color/white" />


    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/passconf_layout_txt" />
    <TextView
        android:id="@+id/already_registrd_txtVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Already Registered? Login Here"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_btn" />



</androidx.constraintlayout.widget.ConstraintLayout>