<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportsMenuItems.Cashup_report">

    <TextView
        android:id="@+id/cashup_report_heading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="Cashup Report"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/select_date_linear_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cashup_report_heading">
        <TextView
            android:id="@+id/from_txtvw"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="FROM:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/date_txtvw"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="DD/MM/YYYY"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/calender_icon_imgvw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_calendar" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/select_date2_linear_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_date_linear_btn">
        <TextView
            android:id="@+id/to_txtvw"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TO:"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/date2_txtvw"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="DD/MM/YYYY"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/calender2_icon_imgvw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_calendar" />

    </LinearLayout>

    <Button
        android:id="@+id/load_cashup_reports_btn"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_hollow_borders"
        android:backgroundTint="@color/colorAccent"
        android:text="GO"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_date2_linear_btn" />

    <LinearLayout
        android:id="@+id/column_headings"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/load_cashup_reports_btn">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="DATE"
            android:textAlignment="center"
            android:textColor="@color/text_black"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="TOTAL COLLECTION"
            android:textAlignment="center"
            android:textColor="@color/text_black"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="SUBMITTED AMOUNT"
            android:textAlignment="center"
            android:textColor="@color/text_black"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="SHORTFALLS"
            android:textAlignment="textStart"
            android:textColor="@color/text_black"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/cashup_report_listvw"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="1dp"
        android:background="#d3d3d3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/column_headings" />

    <TextView
        android:id="@+id/total_cash_collected_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="8dp"
        android:text="TOTAL CASH COLLECTED"
        android:textAlignment="center"
        android:textColor="@color/text_black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cashup_report_listvw" />

    <TextView
        android:id="@+id/total_cashamount_collected_displaytxtvw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="8dp"
        android:hint="0000.00"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_cash_collected_heading" />

    <TextView
        android:id="@+id/total_submited_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOTAL CASH SUBMITTED"
        android:textAlignment="center"
        android:textColor="@color/text_black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_cashamount_collected_displaytxtvw" />

    <TextView
        android:id="@+id/total_cash_submitted_txtvw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="8dp"
        android:hint="0000.00"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_submited_heading" />

    <TextView
        android:id="@+id/shortfall_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="TOTAL SHORTFALLS"
        android:textAlignment="center"
        android:textColor="@color/text_black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_cash_submitted_txtvw" />

    <TextView
        android:id="@+id/shortfall_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="8dp"
        android:hint="0000.00"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shortfall_heading" />


</androidx.constraintlayout.widget.ConstraintLayout>