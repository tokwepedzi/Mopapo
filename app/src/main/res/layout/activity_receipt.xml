<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:gravity="top"
    tools:context=".RecepitMenuItems.receipt">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Loan Repayment"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">
        <LinearLayout
            android:id="@+id/selectable_linear"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/select_date_heading">

            <TextView
                android:id="@+id/date_txtvw"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:hint="DD/MM/YYYY"
                android:paddingEnd="30dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/calender_icon_imgvw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                app:srcCompat="@drawable/ic_calendar" />

        </LinearLayout>


        <!-- <TextView
             android:id="@+id/receivedAmount"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:height="25dp"
             android:textSize="10sp"
             android:textAlignment="textStart"
             android:text="Received Amount (USD)" />-->
        <LinearLayout
            android:id="@+id/searchable_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/round_hollow_borders">
            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:layout_weight="1"
                app:srcCompat="?android:attr/actionModeWebSearchDrawable" />

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/groupMemberNameSpin1"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:clickable="true"
                android:outlineSpotShadowColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:textSize="18sp"
                app:hintText="Search clients" />



        </LinearLayout>

        <EditText
            android:id="@+id/receivedAmountFill"
            android:layout_width="170dp"
            android:layout_height="55dp"
            android:outlineProvider="bounds"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:ems="28"
            android:hint="Type amount here"
            android:inputType="number|numberDecimal"
            android:textSize="20sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/confirm_entries"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="confirm" />


        </RelativeLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient2"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp">


        <TextView
            android:id="@+id/clientname_tag"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Client name:"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/clientname_view"

            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="35dp" />
        <TextView
            android:id="@+id/paid_amount_tag"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Paid amount:"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/client_paidamnt_view"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="35dp" />
        <TextView
            android:id="@+id/_tag"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Loan Balance:"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/current_amnt"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="35dp" />




    </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>