<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientsMenuItems.clients">



    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#AB5FB8"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="15dp"
        >

        <RelativeLayout
            android:id="@+id/newVerificationBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/newVerificationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="40dp"
                android:text="New Verification"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#AB5FB8"
        android:layout_marginTop="130dp"
        app:cardCornerRadius="15dp"
        >

        <RelativeLayout
            android:id="@+id/clientsViewBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/clientsViewTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="40dp"
                android:text="Clients View"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>





    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#AB5FB8"
        android:layout_marginTop="220dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:id="@+id/promotionsAndMarketingBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/accountingBtnTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="40dp"
                android:text="Promotions and Marketing"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>