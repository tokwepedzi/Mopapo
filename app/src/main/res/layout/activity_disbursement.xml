<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    tools:context=".AccountsMenuItems.disbursement">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Loan disbursemnet"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/groupMemberNameSpin1"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginBottom="100dp"
        android:height="40dp"
        android:textSize="18dp"
        app:hintText="Search client to disburse to" />


        <TextView
            android:id="@+id/loanAmountTxtView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:height="25dp"
            android:text="Loan Amount (USD)"
            android:textAlignment="textStart"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/loanAmountEditTxt"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:ems="28"
            android:hint="type USD amount here"
            android:inputType="number"
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <Button
            android:id="@+id/confirmDisbursementBtn"
            android:layout_width="260dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Confirm disbursement"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>